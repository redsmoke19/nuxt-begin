{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "@img/*": ["./assets/images/*"],
      "@icons/*": ["./assets/icons/*"],
      "@ui/*": ["./components/UI/*"],
      "@views/*": ["./views/*"],
      "@vars": ["./assets/styles/global/variables.scss"],
    },
    "types": ["@nuxt/types", "@types/node", "@pinia/nuxt"]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
